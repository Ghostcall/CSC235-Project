<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             x:Class="CSCResult.Views.AdminApp">

    <Grid>

        <Image Source="student_background.jgp" Aspect="AspectFill" HorizontalOptions="Center" Opacity="1"/>
        <StackLayout>
            <Grid RowSpacing="25" RowDefinitions="Auto, Auto, Auto, Auto">
                <StackLayout Grid.Row="4" Spacing="0">
                    <Image Source="logo.png" WidthRequest="200"/>
                    <Label Text="" FontSize="30" TextColor="WhiteSmoke" HorizontalTextAlignment="Center" FontAttributes="Bold"/>

                    <Button 
                        x:Name="AdminLogin"
                        Text="Admin Login"
                        TextColor="White"
                        Margin="15"
                        BackgroundColor="Brown"
                        WidthRequest="110" 
                        HeightRequest="47"
                        CornerRadius="30"
                        FontSize="18"
                        FontFamily="Cambria"
                        FontAttributes="Bold"
                        Clicked="AdminLogin_Clicked"/>
                </StackLayout>
            </Grid>
        </StackLayout>
    </Grid>
</ContentPage>
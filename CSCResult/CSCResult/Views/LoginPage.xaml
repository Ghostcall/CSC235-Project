<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             x:Class="CSCResult.Views.LoginPage">
    
    <Grid>

        <Image Source="background.jgp" Aspect="AspectFill" HorizontalOptions="Center" Opacity="1"/>
        <StackLayout>
            <Grid RowSpacing="25" RowDefinitions="Auto, Auto, Auto, Auto">
                <StackLayout Grid.Row="4" Spacing="0">
                    <Image Source="logo.png" WidthRequest="200"/>
                    <Label Text="" FontSize="30" TextColor="WhiteSmoke" HorizontalTextAlignment="Center" FontAttributes="Bold"/>

                    <Button 
                        x:Name="HandleStudentLogin"
                        Text="Student Login"
                        TextColor="White"
                        Margin="15"
                        BackgroundColor="Brown"
                        WidthRequest="110" 
                        HeightRequest="47"
                        CornerRadius="30"
                        FontSize="18"
                        FontFamily="Cambria"
                        FontAttributes="Bold"
                        Clicked="HandleStudentLogin_Clicked"/>

                    <Button 
                        x:Name="HandleAdminLogin"
                        Text="Admin Login"
                        TextColor="Brown"
                        Margin="15"
                        BorderColor="Red"
                        BorderWidth="1.5"
                        BackgroundColor="White"
                        WidthRequest="110" 
                        HeightRequest="47"
                        CornerRadius="30"
                        FontSize="18"
                        FontFamily="Cambria"
                        FontAttributes="Bold"
                        Clicked="HandleAdminLogin_Clicked"/>

                    <Frame 
                           BorderColor="Transparent"
                           BackgroundColor="Transparent"
                           Margin="10, 80, 10, 0"
                           Padding="5"
                           HeightRequest="100"
                           CornerRadius="10">
                        <Label
                            Text="This project is a result of CSC235 - Object Oriented Programming, and is aimed at demonstrating the understanding of OOP Paradigms. &#10;To think straight is the font of knowledge..."
                            FontFamily="Cambria"
                            TextColor="White"
                            FontSize="18"
                            HorizontalTextAlignment="Start"
                            VerticalTextAlignment="Start"
                            FontAttributes="Bold"
                            />
                    </Frame>
                </StackLayout>
            </Grid>
        </StackLayout>
    </Grid>
</ContentPage>